# Environment Variables for Aarambh LMS - Production
# Copy this file to .env.production and fill in your actual values

# API Configuration (Update with your Render backend URL after deployment)
VITE_API_BASE_URL=https://your-render-app-url.onrender.com/api

# Application Environment
VITE_APP_ENV=production
VITE_DEBUG_MODE=false
VITE_APP_URL=https://your-vercel-app.vercel.app

# OTP Configuration
VITE_OTP_EXPIRY_MINUTES=10
VITE_OTP_LENGTH=6
VITE_OTP_MAX_RESEND_ATTEMPTS=3
VITE_OTP_RESEND_COOLDOWN=60

# API Settings
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_2FA=true

# Email Service Provider
VITE_EMAIL_SERVICE_PROVIDER=gmail

# Session Configuration
VITE_SESSION_TIMEOUT=30

# Gmail Configuration (Using App Password - RECOMMENDED)
VITE_GMAIL_USER=your_gmail_user_here
VITE_GMAIL_APP_PASSWORD=your_app_password_here
VITE_GMAIL_FROM_NAME=Aarambh LMS

# SMTP Configuration (Gmail)
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_SECURE=false

# Alternative Email Providers (Optional)
VITE_SENDGRID_API_KEY=your_sendgrid_api_key_here
VITE_SENDGRID_FROM_EMAIL=noreply@aarambh.com
VITE_SENDGRID_FROM_NAME=Aarambh LMS

# AWS SES Configuration
VITE_AWS_SES_REGION=us-east-1
VITE_AWS_SES_ACCESS_KEY_ID=your_aws_access_key_here
VITE_AWS_SES_SECRET_ACCESS_KEY=your_aws_secret_key_here
VITE_AWS_SES_FROM_EMAIL=noreply@aarambh.com

# Resend Configuration
VITE_RESEND_API_KEY=your_resend_api_key_here
VITE_RESEND_FROM_EMAIL=noreply@aarambh.com

# JWT Secret
VITE_JWT_SECRET=your_jwt_secret_key_here

# Third-Party Integrations
VITE_HUGGINGFACE_API_KEY=your_huggingface_api_key_here
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret_here
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here